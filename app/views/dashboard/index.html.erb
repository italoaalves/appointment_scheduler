<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900"><%= t("dashboard.title") %></h1>
    <p class="mt-1 text-sm text-slate-600">
      <% if tenant_staff? %>
        <%= t("dashboard.tenant_subtitle") %>
      <% elsif current_user.admin? %>
        <%= t("dashboard.admin_subtitle") %>
      <% else %>
        <%= t("dashboard.client_subtitle") %>
      <% end %>
    </p>
  </header>

  <% if tenant_staff? %>
    <div class="mb-6">
      <%= render "calendar_overview" %>
    </div>
    <div class="grid gap-4 sm:grid-cols-2">
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
        <h2 class="text-sm font-medium text-slate-900"><%= t("dashboard.admin.appointments_title") %></h2>
        <p class="mt-1 text-xs text-slate-600">
          <%= t("dashboard.admin.appointments_body") %>
        </p>
        <div class="mt-3">
          <%= link_to t("dashboard.admin.appointments_cta"),
                      admin_appointments_path,
                      class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
        </div>
      </div>

      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
        <h2 class="text-sm font-medium text-slate-900"><%= t("dashboard.admin.clients_title") %></h2>
        <p class="mt-1 text-xs text-slate-600">
          <%= t("dashboard.admin.clients_body") %>
        </p>
        <div class="mt-3">
          <%= link_to t("dashboard.admin.clients_cta"),
                      admin_clients_path,
                      class: "inline-flex items-center rounded-md bg-slate-100 px-3 py-2 text-xs font-semibold text-slate-900 shadow-sm hover:bg-slate-200" %>
        </div>
      </div>
    </div>
  <% elsif current_user.admin? %>
    <div class="grid gap-4 sm:grid-cols-2">
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
        <h2 class="text-sm font-medium text-slate-900"><%= t("dashboard.platform.tenants_title") %></h2>
        <p class="mt-1 text-xs text-slate-600">
          <%= t("dashboard.platform.tenants_body") %>
        </p>
        <div class="mt-3">
          <%= link_to t("dashboard.platform.tenants_cta"),
                      platform_spaces_path,
                      class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
        </div>
      </div>

      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
        <h2 class="text-sm font-medium text-slate-900"><%= t("dashboard.platform.users_title") %></h2>
        <p class="mt-1 text-xs text-slate-600">
          <%= t("dashboard.platform.users_body") %>
        </p>
        <div class="mt-3">
          <%= link_to t("dashboard.platform.users_cta"),
                      platform_users_path,
                      class: "inline-flex items-center rounded-md bg-slate-100 px-3 py-2 text-xs font-semibold text-slate-900 shadow-sm hover:bg-slate-200" %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="grid gap-4 sm:grid-cols-2">
      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
        <h2 class="text-sm font-medium text-slate-900"><%= t("dashboard.client.my_appointments_title") %></h2>
        <p class="mt-1 text-xs text-slate-600">
          <%= t("dashboard.client.my_appointments_body") %>
        </p>
        <div class="mt-3">
          <%= link_to t("dashboard.client.my_appointments_cta"),
                      appointments_path,
                      class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
        </div>
      </div>

      <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
        <h2 class="text-sm font-medium text-slate-900"><%= t("dashboard.client.new_request_title") %></h2>
        <p class="mt-1 text-xs text-slate-600">
          <%= t("dashboard.client.new_request_body") %>
        </p>
        <div class="mt-3">
          <%= link_to t("dashboard.client.new_request_cta"),
                      new_appointment_path,
                      class: "inline-flex items-center rounded-md bg-slate-100 px-3 py-2 text-xs font-semibold text-slate-900 shadow-sm hover:bg-slate-200" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
