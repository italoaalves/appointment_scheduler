<% booking_url = current_tenant.personalized_scheduling_link ? book_by_slug_url(slug: current_tenant.personalized_scheduling_link.slug) : nil %>
<% if booking_url.present? %>
  <div class="relative rounded-xl border border-emerald-200 bg-emerald-50 p-6 shadow-sm"
       data-controller="clipboard dashboard"
       data-dashboard-dismiss-url-value="<%= dismiss_dashboard_welcome_path %>"
       id="dashboard_welcome_card">
    <button type="button"
            data-action="click->dashboard#dismissWelcome"
            aria-label="<%= t("dashboard.welcome_card.dismiss") %>"
            class="absolute right-3 top-3 rounded p-1 text-slate-500 hover:bg-emerald-100 hover:text-slate-700">
      <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <h2 class="pr-8 text-lg font-semibold text-slate-900">
      <%= t("dashboard.welcome_card.title") %>
    </h2>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("dashboard.welcome_card.body") %>
    </p>
    <div class="mt-4">
      <%= render "shared/booking_share_actions",
                 booking_url: booking_url,
                 business_name: current_tenant.name %>
    </div>
    <p class="mt-3">
      <%= link_to t("dashboard.welcome_card.help_link"), "#", class: "text-sm text-emerald-700 hover:text-emerald-900 hover:underline" %>
    </p>
  </div>
<% end %>
