<div class="space-y-4">
  <% page_actions = capture do %>
    <%= link_to t("platform.space_customers.index.appointments"), platform_space_appointments_path(@space), class: button_classes(:secondary) %>
    <%= link_to t("platform.space_appointments.index.back_to_space"), platform_space_path(@space), class: button_classes(:secondary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("platform.space_customers.index.title", space: @space.name), actions: page_actions %>

  <% if @customers.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.customers.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.customers.index.table.phone") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.customers.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @customers.each do |customer| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900"><%= customer.name %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= customer.phone.presence || "â€”" %></td>
              <td class="px-4 py-2 align-top">
                <%= link_to t("admin.customers.index.view"), platform_space_customer_path(@space, customer), class: button_classes(:table_link) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @customers %>
  <% else %>
    <%= render "application/shared/empty_state", content: t("admin.customers.index.empty") %>
  <% end %>
</div>
