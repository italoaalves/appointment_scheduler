<div class="space-y-6">
  <header class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
        <%= t("admin.customers.show.title") %>
      </h1>
      <p class="mt-1 text-xs text-slate-600">
        <%= t("platform.space_customers.show.subtitle", space: @space.name) %>
      </p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to t("platform.space_appointments.index.back_to_space"),
                  platform_space_path(@space),
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
    </div>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
    <dl class="space-y-3 text-sm">
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("admin.customers.show.name") %></dt>
        <dd class="text-slate-900"><%= @customer.name %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("admin.customers.show.phone") %></dt>
        <dd class="text-slate-900"><%= @customer.phone.presence || "—" %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("admin.customers.show.email") %></dt>
        <dd class="text-slate-900"><%= @customer.email.presence || "—" %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("admin.customers.show.address") %></dt>
        <dd class="text-slate-900"><%= @customer.address.presence || "—" %></dd>
      </div>
    </dl>
  </div>

  <div class="flex flex-wrap gap-3">
    <%= link_to t("platform.space_customers.index.back_to_customers"),
                platform_space_customers_path(@space),
                class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
  </div>

  <section class="space-y-3">
    <h2 class="text-sm font-semibold text-slate-900">
      <%= t("admin.customers.show.appointments_title") %>
    </h2>

    <% if @appointments.any? %>
      <ul class="space-y-2">
        <% @appointments.each do |appointment| %>
          <li class="rounded-lg border border-slate-200 bg-white p-3 text-sm shadow-sm">
            <div class="flex items-start justify-between gap-3">
              <div>
                <p class="text-slate-900">
                  <%= format_appointment_time(appointment.scheduled_at, space: appointment.space, format: :long) || "—" %>
                </p>
                <p class="mt-0.5 text-xs text-slate-500">
                  <%= t("admin.customers.show.status_prefix") %> <%= t("activerecord.attributes.appointment.status.#{appointment.status}") %>
                </p>
              </div>
              <%= link_to t("admin.appointments.index.view"),
                          platform_space_appointment_path(@space, appointment),
                          class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
            </div>
          </li>
        <% end %>
      </ul>
      <%= paginate @appointments %>
    <% else %>
      <p class="text-sm text-slate-600">
        <%= t("admin.customers.show.no_appointments") %>
      </p>
    <% end %>
  </section>
</div>
