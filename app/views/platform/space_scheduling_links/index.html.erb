<div class="space-y-4">
  <% page_actions = capture do %>
    <%= link_to t("platform.space_appointments.index.back_to_space"), platform_space_path(@space), class: button_classes(:secondary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("platform.space_scheduling_links.index.title", space: @space.name), actions: page_actions %>

  <% if @scheduling_links.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.scheduling_links.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.scheduling_links.index.table.type") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.scheduling_links.index.table.status") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.scheduling_links.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @scheduling_links.each do |link| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900">
                <%= link.name.presence || "â€”" %>
              </td>
              <td class="px-4 py-2 align-top">
                <%= render "application/shared/status_badge", status: nil, label: link.link_type.humanize %>
              </td>
              <td class="px-4 py-2 align-top text-slate-700">
                <% if link.usable? %>
                  <span class="text-emerald-600"><%= t("platform.scheduling_links.index.active") %></span>
                <% else %>
                  <span class="text-slate-500"><%= t("platform.scheduling_links.index.inactive") %></span>
                <% end %>
              </td>
              <td class="px-4 py-2 align-top">
                <%= link_to t("platform.scheduling_links.index.view"), platform_space_scheduling_link_path(@space, link), class: button_classes(:table_link) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @scheduling_links %>
  <% else %>
    <%= render "application/shared/empty_state", content: t("platform.scheduling_links.index.empty") %>
  <% end %>
</div>
