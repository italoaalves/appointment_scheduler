<div class="space-y-6">
  <header class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
        <%= t("platform.spaces.show.title") %>
      </h1>
      <p class="mt-1 text-xs text-slate-600">
        <%= t("platform.spaces.show.subtitle") %>
      </p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to t("platform.spaces.show.edit"),
                  edit_platform_space_path(@space),
                  class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to t("platform.spaces.show.add_user"),
                  new_platform_user_path(space_id: @space.id),
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
      <%= link_to t("platform.spaces.show.manage_users"),
                  platform_users_path(space_id: @space.id),
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
      <%= link_to t("platform.spaces.show.back"),
                  platform_spaces_path,
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
    </div>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
    <dl class="space-y-3 text-sm">
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("platform.spaces.show.name") %></dt>
        <dd class="text-slate-900"><%= @space.name %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("platform.spaces.show.timezone") %></dt>
        <dd class="text-slate-900"><%= @space.timezone.presence || "â€”" %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("platform.spaces.show.customers_count") %></dt>
        <dd class="text-slate-900">
          <%= link_to @space.customers.count, platform_space_customers_path(@space), class: "text-slate-900 hover:underline" %>
        </dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("platform.spaces.show.team_size") %></dt>
        <dd class="text-slate-900"><%= @space.users.count %></dd>
      </div>
    </dl>
  </div>

  <div class="flex flex-wrap gap-2">
    <%= link_to t("platform.spaces.show.view_appointments"), platform_space_appointments_path(@space), class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
    <%= link_to t("platform.spaces.show.view_customers"), platform_space_customers_path(@space), class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
    <%= link_to t("platform.spaces.show.view_scheduling_links"), platform_space_scheduling_links_path(@space), class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
  </div>
</div>
