<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("platform.spaces.new.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("platform.spaces.new.subtitle") %>
    </p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <%= form_with model: [:platform, @space], url: platform_spaces_path, class: "space-y-4" do |form| %>
      <%= render "admin/shared/error_messages", resource: @space %>
      <%= render "platform/spaces/manager_error_messages" if defined?(@manager) && @manager&.errors&.any? %>

      <div>
        <%= form.label :name,
                       t("platform.spaces.new.name_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_field :name,
                            required: true,
                            class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div>
        <%= form.label :timezone,
                       t("platform.spaces.new.timezone_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_field :timezone,
                           class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500",
                           data: { controller: "timezone-detect" } %>
      </div>

      <div class="border-t border-slate-200 pt-4">
        <p class="text-sm font-medium text-slate-700 mb-2"><%= t("platform.spaces.new.manager_section") %></p>
        <p class="text-xs text-slate-500 mb-3"><%= t("platform.spaces.new.manager_hint") %></p>
        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <label for="manager_email" class="block text-sm font-medium text-slate-700"><%= t("platform.spaces.new.manager_email") %></label>
            <%= text_field_tag :manager_email, params[:manager_email] || @manager&.email, class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
          <div>
            <label for="manager_name" class="block text-sm font-medium text-slate-700"><%= t("platform.spaces.new.manager_name") %></label>
            <%= text_field_tag :manager_name, params[:manager_name] || @manager&.name, class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
          <div>
            <label for="manager_password" class="block text-sm font-medium text-slate-700"><%= t("platform.spaces.new.manager_password") %></label>
            <%= password_field_tag :manager_password, nil, class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
          <div>
            <label for="manager_password_confirmation" class="block text-sm font-medium text-slate-700"><%= t("platform.spaces.new.manager_password_confirmation") %></label>
            <%= password_field_tag :manager_password_confirmation, nil, class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
        </div>
      </div>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("platform.spaces.new.submit"),
                        class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
        <%= link_to t("platform.spaces.new.back"),
                    platform_spaces_path,
                    class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
      </div>
    <% end %>
  </div>
</div>
