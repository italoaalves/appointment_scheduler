<div class="space-y-4">
  <% page_actions = capture do %>
    <%= link_to t("platform.spaces.index.new_button"), new_platform_space_path, class: button_classes(:primary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("platform.spaces.index.title"), actions: page_actions %>

  <% if @spaces.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.spaces.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.spaces.index.table.customers") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.spaces.index.table.team_size") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.spaces.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @spaces.each do |space| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900"><%= space.name %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= space.customers.size %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= space.users.size %></td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("platform.spaces.index.view"), platform_space_path(space), class: button_classes(:table_link) %>
                  <%= link_to t("platform.spaces.index.edit"), edit_platform_space_path(space), class: button_classes(:table_link) %>
                  <%= link_to t("platform.spaces.index.manage_users"), platform_users_path(space_id: space.id), class: button_classes(:table_link) %>
                  <%= button_to t("platform.spaces.index.delete"), platform_space_path(space), method: :delete, data: { turbo_confirm: t("platform.spaces.index.delete_confirm") }, class: button_classes(:danger) %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @spaces %>
  <% else %>
    <%= render "application/shared/empty_state", content: t("platform.spaces.index.empty") %>
  <% end %>
</div>
