<div class="space-y-4">
  <header class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
        <%= t("platform.appointments.show.title") %>
      </h1>
      <p class="mt-1 text-xs text-slate-600">
        <%= t("platform.space_appointments.show.subtitle", space: @space.name) %>
      </p>
    </div>
    <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-800">
      <%= t("activerecord.attributes.appointment.status.#{@appointment.status}") %>
    </span>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
    <dl class="space-y-3 text-sm">
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("platform.appointments.show.customer") %></dt>
        <dd class="text-slate-900">
          <%= @appointment.customer&.name || "—" %>
        </dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("platform.appointments.show.scheduled_for") %></dt>
        <dd class="text-slate-900">
          <%= format_appointment_time(@appointment.scheduled_at, space: @appointment.space, format: :long) || "—" %>
        </dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("platform.appointments.show.requested_at") %></dt>
        <dd class="text-slate-900">
          <%= format_appointment_time(@appointment.requested_at, space: @appointment.space, format: :date_only) || "—" %>
        </dd>
      </div>
    </dl>
  </div>

  <div class="flex flex-wrap items-center gap-3">
    <%= link_to t("platform.space_appointments.index.back_to_appointments"),
                platform_space_appointments_path(@space),
                class: button_classes(:primary) %>
    <%= link_to t("platform.space_appointments.index.back_to_space"),
                platform_space_path(@space),
                class: button_classes(:secondary) %>
  </div>
</div>
