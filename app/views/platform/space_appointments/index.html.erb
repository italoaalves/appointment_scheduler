<div class="space-y-6">
  <div class="flex items-center justify-between gap-2 flex-wrap">
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("platform.space_appointments.index.title", space: @space.name) %>
    </h1>
    <div class="flex flex-wrap items-center gap-2">
      <%= link_to t("platform.space_appointments.index.customers"),
                  platform_space_customers_path(@space),
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
      <%= link_to t("platform.space_appointments.index.back_to_space"),
                  platform_space_path(@space),
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
    </div>
  </div>

  <%= form_with url: platform_space_appointments_path(@space),
                method: :get,
                local: true,
                class: "flex flex-wrap items-end gap-3 rounded-xl border border-slate-200 bg-white p-4 shadow-sm" do %>
    <div class="flex flex-col gap-1">
      <label for="status" class="text-xs font-medium text-slate-600"><%= t("admin.appointments.filters.status") %></label>
      <%= select_tag :status,
                     options_for_select(
                       [
                         [ t("admin.appointments.filters.all_statuses"), "" ],
                         [ t("admin.appointments.filters.pending"), "pending" ],
                         [ t("admin.appointments.filters.confirmed"), "confirmed" ],
                         [ t("admin.appointments.filters.cancelled"), "cancelled" ],
                         [ t("admin.appointments.filters.rescheduled"), "rescheduled" ],
                         [ t("admin.appointments.filters.no_show"), "no_show" ],
                         [ t("admin.appointments.filters.finished"), "finished" ]
                       ],
                       params[:status]
                     ),
                     class: "rounded-md border-slate-300 text-sm focus:border-slate-500 focus:ring-slate-500" %>
    </div>
    <div class="flex flex-col gap-1">
      <label for="date_from" class="text-xs font-medium text-slate-600"><%= t("admin.appointments.filters.from") %></label>
      <%= date_field_tag :date_from, params[:date_from], class: "rounded-md border-slate-300 text-sm focus:border-slate-500 focus:ring-slate-500" %>
    </div>
    <div class="flex flex-col gap-1">
      <label for="date_to" class="text-xs font-medium text-slate-600"><%= t("admin.appointments.filters.to") %></label>
      <%= date_field_tag :date_to, params[:date_to], class: "rounded-md border-slate-300 text-sm focus:border-slate-500 focus:ring-slate-500" %>
    </div>
    <div class="flex gap-2">
      <%= submit_tag t("admin.appointments.filters.apply"), class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to t("admin.appointments.filters.clear"), platform_space_appointments_path(@space), class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
    </div>
  <% end %>

  <% if @appointments.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.customer") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.scheduled") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.status") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @appointments.each do |appointment| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900">
                <%= appointment.customer&.name || "—" %>
              </td>
              <td class="px-4 py-2 align-top text-slate-700">
                <%= format_appointment_time(appointment.scheduled_at, space: appointment.space, format: :short) || "—" %>
              </td>
              <td class="px-4 py-2 align-top">
                <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-800">
                  <%= t("activerecord.attributes.appointment.status.#{appointment.status}") %>
                </span>
              </td>
              <td class="px-4 py-2 align-top">
                <%= link_to t("admin.appointments.index.view"),
                            platform_space_appointment_path(@space, appointment),
                            class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @appointments, params: { status: params[:status], date_from: params[:date_from], date_to: params[:date_to] } %>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 p-6 text-center text-sm text-slate-600">
      <%= t("admin.appointments.index.empty") %>
    </div>
  <% end %>
</div>
