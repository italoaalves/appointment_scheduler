<div class="space-y-4">
  <div class="flex items-center justify-between gap-2">
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("platform.users.index.title") %>
    </h1>
    <div class="flex flex-wrap items-center gap-2">
      <%= link_to t("platform.users.index.new_button"),
                  new_platform_user_path(space_id: params[:space_id].presence),
                  class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to t("platform.users.index.all_spaces"),
                  platform_spaces_path,
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
    </div>
  </div>

  <% if @space_filter %>
    <p class="text-sm text-slate-600">
      <%= t("platform.users.index.filtered_by_space", space: @space_filter.name) %>
    </p>
  <% end %>

  <% if @users.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.email") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.role") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.space") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @users.each do |user| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900"><%= user.email %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= user.name.presence || "—" %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= user.role.humanize %></td>
              <td class="px-4 py-2 align-top text-slate-700">
                  <% if user.space %>
                    <%= link_to user.space.name, platform_space_path(user.space), class: "text-slate-900 hover:underline" %>
                  <% else %>
                    —
                  <% end %>
                </td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("platform.users.index.view"),
                              platform_user_path(user, space_id: params[:space_id].presence),
                              class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
                  <%= link_to t("platform.users.index.edit"),
                              edit_platform_user_path(user, space_id: params[:space_id].presence),
                              class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
                  <%= button_to t("platform.users.index.delete"),
                                platform_user_path(user),
                                method: :delete,
                                params: { space_id: params[:space_id].presence },
                                data: { turbo_confirm: t("platform.users.index.delete_confirm") },
                                class: "inline-flex items-center rounded-md bg-slate-700 px-2.5 py-1 text-xs font-semibold text-white hover:bg-slate-900" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @users, params: { space_id: params[:space_id] } %>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 p-6 text-center text-sm text-slate-600">
      <%= t("platform.users.index.empty") %>
    </div>
  <% end %>
</div>
