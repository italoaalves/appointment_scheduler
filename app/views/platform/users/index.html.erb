<div class="space-y-4">
  <% page_actions = capture do %>
    <%= link_to t("platform.users.index.new_button"), new_platform_user_path(space_id: params[:space_id].presence), class: button_classes(:primary) %>
    <%= link_to t("platform.users.index.all_spaces"), platform_spaces_path, class: button_classes(:secondary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("platform.users.index.title"), actions: page_actions %>

  <% if @space_filter %>
    <p class="text-sm text-slate-600">
      <%= t("platform.users.index.filtered_by_space", space: @space_filter.name) %>
    </p>
  <% end %>

  <% if @users.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.email") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.role") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.space") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("platform.users.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @users.each do |user| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900"><%= user.email %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= user.name.presence || "—" %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= user.role.humanize %><% if user.super_admin? %> • <%= t("activerecord.attributes.user.system_role.super_admin") %><% end %></td>
              <td class="px-4 py-2 align-top text-slate-700">
                  <% if user.space %>
                    <%= link_to user.space.name, platform_space_path(user.space), class: "text-slate-900 hover:underline" %>
                  <% else %>
                    —
                  <% end %>
                </td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("platform.users.index.view"), platform_user_path(user, space_id: params[:space_id].presence), class: button_classes(:table_link) %>
                  <%= link_to t("platform.users.index.edit"), edit_platform_user_path(user, space_id: params[:space_id].presence), class: button_classes(:table_link) %>
                  <%= button_to t("platform.users.index.delete"), platform_user_path(user), method: :delete, params: { space_id: params[:space_id].presence }, data: { turbo_confirm: t("platform.users.index.delete_confirm") }, class: button_classes(:danger) %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @users, params: { space_id: params[:space_id] } %>
  <% else %>
    <%= render "application/shared/empty_state", content: t("platform.users.index.empty") %>
  <% end %>
</div>
