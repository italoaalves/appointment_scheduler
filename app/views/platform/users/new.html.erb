<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("platform.users.new.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("platform.users.new.subtitle") %>
    </p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <%= form_with model: [:platform, @user], class: "space-y-4" do |form| %>
      <%= render "admin/shared/error_messages", resource: @user %>

      <div>
        <%= form.label :email, class: "block text-sm font-medium text-slate-700" %>
        <%= form.email_field :email,
                             required: true,
                             class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div>
        <%= form.label :name, class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_field :name,
                            class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div>
        <%= form.label :phone_number,
                       t("platform.users.new.phone_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.telephone_field :phone_number,
                                 class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div>
        <%= form.label :role, class: "block text-sm font-medium text-slate-700" %>
        <%= form.select :role,
                        User.roles.keys.map { |r| [r.humanize, r] },
                        {},
                        class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div>
        <%= form.label :space_id,
                       t("platform.users.new.space_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.collection_select :space_id,
                                   Space.order(:name),
                                   :id, :name,
                                   { include_blank: t("platform.users.new.no_space") },
                                   class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div class="grid gap-4 sm:grid-cols-2">
        <div>
          <%= form.label :password,
                         t("platform.users.new.password_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.password_field :password,
                                  class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
        <div>
          <%= form.label :password_confirmation,
                         t("platform.users.new.password_confirmation_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.password_field :password_confirmation,
                                  class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
      </div>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("platform.users.new.submit"),
                        class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
        <%= link_to t("platform.users.new.back"),
                    platform_users_path(space_id: params[:space_id].presence),
                    class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
      </div>
    <% end %>
  </div>
</div>
