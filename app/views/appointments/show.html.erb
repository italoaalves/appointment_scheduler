<div class="space-y-4">
  <header class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
        <%= t("appointments.show.title") %>
      </h1>
      <p class="mt-1 text-xs text-slate-600">
        <%= t("appointments.show.subtitle") %>
      </p>
    </div>
    <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-800">
      <%= t("activerecord.attributes.appointment.status.#{@appointment.status}") %>
    </span>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
    <dl class="space-y-3 text-sm">
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("appointments.show.scheduled_for") %></dt>
        <dd class="text-slate-900">
          <%= @appointment.scheduled_at&.strftime("%B %d, %Y at %l:%M %p") || t("appointments.show.to_be_scheduled") %>
        </dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("appointments.show.requested_at") %></dt>
        <dd class="text-slate-900">
          <%= @appointment.requested_at&.strftime("%B %d, %Y") || "â€”" %>
        </dd>
      </div>
    </dl>
  </div>

  <div class="flex flex-wrap items-center gap-3">
    <%= link_to t("appointments.show.back"),
                appointments_path,
                class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>

    <% if @appointment.pending? || @appointment.confirmed? %>
      <%= button_to t("appointments.show.cancel"),
                    cancel_appointment_path(@appointment),
                    method: :patch,
                    data: { turbo_confirm: t("appointments.show.cancel_confirm") },
                    class: "inline-flex items-center rounded-md bg-red-500 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-red-600" %>
    <% end %>

    <% if @appointment.pending? %>
      <%= button_to "Remove request",
                    appointment_path(@appointment),
                    method: :delete,
                    data: { turbo_confirm: t("appointments.show.remove_request_confirm") },
                    class: "inline-flex items-center rounded-md bg-amber-500 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-amber-600" %>
    <% end %>
  </div>
</div>
