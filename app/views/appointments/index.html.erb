<div class="space-y-4">
  <% page_actions = capture do %>
    <%= link_to t("appointments.index.request_button"), new_appointment_path, class: button_classes(:primary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("appointments.index.title"), actions: page_actions %>

  <% if @appointments.any? %>
    <ul class="space-y-3">
      <% @appointments.each do |appointment| %>
        <li>
          <%= link_to appointment_path(appointment),
                      class: "block rounded-xl border border-slate-200 bg-white p-4 shadow-sm transition hover:border-slate-300 hover:shadow-md" do %>
            <div class="flex items-start justify-between gap-3">
              <div>
                <p class="text-sm font-medium text-slate-900">
                  <%= format_appointment_time(appointment.scheduled_at, space: appointment.space, format: :long) || t("appointments.index.time_to_be_scheduled") %>
                </p>
                <p class="mt-1 text-xs text-slate-500">
                  <%= t("appointments.index.requested_prefix") %>
                  <%= format_appointment_time(appointment.requested_at, space: appointment.space, format: :short_date) || t("appointments.index.requested_recently") %>
                </p>
              </div>
              <%= render "application/shared/status_badge", status: appointment.status %>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 p-6 text-center">
      <p class="text-sm text-slate-600">
        <%= t("appointments.index.empty_body") %>
      </p>
      <div class="mt-3">
        <%= link_to t("appointments.index.empty_cta"), new_appointment_path, class: button_classes(:primary) %>
      </div>
    </div>
  <% end %>
</div>
