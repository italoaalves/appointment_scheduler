<div class="space-y-6">
  <header class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
        <%= t("admin.users.show.title") %>
      </h1>
      <p class="mt-1 text-xs text-slate-600">
        <%= t("admin.users.show.subtitle") %>
      </p>
    </div>
    <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-800">
      <%= @user.role.humanize %>
    </span>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
    <dl class="space-y-3 text-sm">
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("admin.users.show.email") %></dt>
        <dd class="text-slate-900"><%= @user.email %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("admin.users.show.name") %></dt>
        <dd class="text-slate-900"><%= @user.name.presence || "—" %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("admin.users.show.phone") %></dt>
        <dd class="text-slate-900"><%= @user.phone_number.presence || "—" %></dd>
      </div>
    </dl>
  </div>

  <div class="flex flex-wrap gap-3">
    <%= link_to t("admin.users.show.edit_client"),
                edit_admin_user_path(@user),
                class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
    <%= link_to t("admin.users.show.all_clients"),
                admin_users_path,
                class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
    <%= button_to t("admin.users.show.delete_client"),
                  admin_user_path(@user),
                  method: :delete,
                  data: { turbo_confirm: t("admin.users.show.delete_client_confirm") },
                  class: "inline-flex items-center rounded-md bg-slate-700 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-900" %>
  </div>

  <section class="space-y-3">
    <h2 class="text-sm font-semibold text-slate-900">
      <%= t("admin.users.show.appointments_title") %>
    </h2>

    <% if @user.appointments.any? %>
      <ul class="space-y-2">
        <% @user.appointments.each do |appointment| %>
          <li class="rounded-lg border border-slate-200 bg-white p-3 text-sm shadow-sm">
            <div class="flex items-start justify-between gap-3">
              <div>
                <p class="text-slate-900">
                  <%= appointment.scheduled_at&.strftime("%B %d, %Y at %l:%M %p") || "—" %>
                </p>
                <p class="mt-0.5 text-xs text-slate-500">
                  <%= t("admin.users.show.status_prefix") %> <%= appointment.status.humanize %>
                </p>
              </div>
              <%= link_to t("admin.appointments.index.view"),
                          admin_appointment_path(appointment),
                          class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-sm text-slate-600">
        <%= t("admin.users.show.no_appointments") %>
      </p>
    <% end %>
  </section>
</div>
