<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("admin.users.edit.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("admin.users.edit.subtitle") %>
    </p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <%= form_with model: [:admin, @user], class: "space-y-4" do |form| %>
      <div>
        <%= form.label :email,
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.email_field :email,
                             required: true,
                             class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div>
        <%= form.label :name,
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_field :name,
                            class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div>
        <%= form.label :phone_number,
                       t("admin.users.edit.phone_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.telephone_field :phone_number,
                                 class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <% if current_user.manager? %>
        <div>
          <%= form.label :role,
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.select :role,
                          [ [ t("admin.users.roles.manager"), "manager" ], [ t("admin.users.roles.secretary"), "secretary" ] ],
                          {},
                          class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
      <% end %>

      <div class="grid gap-4 sm:grid-cols-2">
        <div>
          <%= form.label :password,
                         t("admin.users.edit.password_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.password_field :password,
                                  class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
        <div>
          <%= form.label :password_confirmation,
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.password_field :password_confirmation,
                                  class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
      </div>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("admin.users.edit.submit"),
                        class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
        <%= link_to t("admin.users.edit.back_to_client"),
                    admin_user_path(@user),
                    class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
        <%= link_to t("admin.users.edit.all_team"),
                    admin_users_path,
                    class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
      </div>
    <% end %>
  </div>
</div>
