<div class="space-y-4">
  <% page_actions = capture do %>
    <% if current_user.manager? %>
      <%= link_to t("admin.users.index.new_button"), new_admin_user_path, class: button_classes(:primary) %>
    <% end %>
    <%= link_to t("admin.users.index.all_appointments"), admin_appointments_path, class: button_classes(:secondary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("admin.users.index.title"), actions: page_actions %>

  <% if @users.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.users.index.table.email") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.users.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.users.index.table.role") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.users.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @users.each do |user| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900"><%= user.email %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= user.name.presence || "â€”" %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= user.role.humanize %></td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("admin.users.index.view"), admin_user_path(user), class: button_classes(:table_link) %>
                  <% if current_user.manager? %>
                    <%= link_to t("admin.users.index.edit"), edit_admin_user_path(user), class: button_classes(:table_link) %>
                    <%= button_to t("admin.users.index.delete"), admin_user_path(user), method: :delete, data: { turbo_confirm: t("admin.users.index.delete_confirm") }, class: button_classes(:table_danger) %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <%= render "application/shared/empty_state", content: t("admin.users.index.empty") %>
  <% end %>
</div>
