<h1>Users</h1>

<p>
  <%= link_to "New User", new_admin_user_path %> |
  <%= link_to "Back to Appointments", admin_appointments_path %>
</p>

<hr>

<table border="1">
  <tr>
    <th>Email</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to "Edit", edit_admin_user_path(user) %> |
        <%= link_to "Delete", admin_user_path(user), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>