<div class="space-y-4">
  <div class="flex items-center justify-between gap-2">
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("admin.customers.index.title") %>
    </h1>
    <div class="flex flex-wrap items-center gap-2">
      <%= link_to t("admin.customers.index.new_button"),
                  new_admin_customer_path,
                  class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to t("admin.customers.index.all_appointments"),
                  admin_appointments_path,
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
    </div>
  </div>

  <% if @customers.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.customers.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.customers.index.table.phone") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.customers.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @customers.each do |customer| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900"><%= customer.name %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= customer.phone.presence || "â€”" %></td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("admin.customers.index.view"),
                              admin_customer_path(customer),
                              class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
                  <%= link_to t("admin.customers.index.edit"),
                              edit_admin_customer_path(customer),
                              class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
                  <%= button_to t("admin.customers.index.delete"),
                                admin_customer_path(customer),
                                method: :delete,
                                data: { turbo_confirm: t("admin.customers.index.delete_confirm") },
                                class: "inline-flex items-center rounded-md bg-slate-700 px-2.5 py-1 text-xs font-semibold text-white hover:bg-slate-900" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 p-6 text-center text-sm text-slate-600">
      <%= t("admin.customers.index.empty") %>
    </div>
  <% end %>
</div>
