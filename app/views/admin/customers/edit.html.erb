<div class="space-y-6">
  <%= render "application/shared/page_header",
             title: t("admin.customers.edit.title"),
             subtitle: t("admin.customers.edit.subtitle") %>

  <%= render layout: "application/shared/card" do %>
    <%= form_with model: [:admin, @customer], class: "space-y-4" do |form| %>
      <%= render "application/shared/error_messages", resource: @customer %>

      <div>
        <%= form.label :name, t("admin.customers.edit.name_label"), class: form_label_classes %>
        <%= form.text_field :name, required: true, class: form_input_classes %>
      </div>

      <div>
        <%= form.label :phone, t("admin.customers.edit.phone_label"), class: form_label_classes %>
        <%= form.telephone_field :phone, class: form_input_classes %>
      </div>

      <div>
        <%= form.label :email, t("admin.customers.edit.email_label"), class: form_label_classes %>
        <%= form.email_field :email, class: form_input_classes %>
      </div>

      <div>
        <%= form.label :address, t("admin.customers.edit.address_label"), class: form_label_classes %>
        <%= form.text_field :address, class: form_input_classes %>
      </div>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("admin.customers.edit.submit"), class: button_classes(:primary) %>
        <%= link_to t("admin.customers.edit.back_to_customer"), admin_customer_path(@customer), class: button_classes(:secondary) %>
        <%= link_to t("admin.customers.edit.all_customers"), admin_customers_path, class: button_classes(:secondary) %>
      </div>
    <% end %>
  <% end %>
</div>
