<div class="space-y-4">
  <div class="flex items-center justify-between gap-2">
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("admin.scheduling_links.index.title") %>
    </h1>
    <div class="flex flex-wrap items-center gap-2">
      <%= link_to t("admin.scheduling_links.index.new_button"),
                  new_admin_scheduling_link_path,
                  class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to t("admin.scheduling_links.index.back_to_appointments"),
                  admin_appointments_path,
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 hover:bg-slate-50" %>
    </div>
  </div>

  <% if current_user.manager? %>
    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <h2 class="text-sm font-semibold text-slate-800"><%= t("admin.personalized_scheduling_links.index.title") %></h2>
      <% if @personalized_link.present? %>
        <p class="mt-1 text-xs text-slate-600"><%= t("admin.personalized_scheduling_links.index.has_link_hint") %></p>
        <div class="mt-2 flex flex-wrap items-center gap-2">
          <input type="text"
                 readonly
                 value="<%= book_by_slug_url(slug: @personalized_link.slug) %>"
                 class="block flex-1 min-w-0 rounded-md border border-slate-300 bg-slate-50 px-2 py-1.5 text-xs text-slate-700" />
          <button type="button"
                  data-controller="clipboard"
                  data-clipboard-text-value="<%= book_by_slug_url(slug: @personalized_link.slug) %>"
                  data-action="click->clipboard#copy"
                  class="inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50">
            <%= t("admin.scheduling_links.show.copy") %>
          </button>
          <%= link_to t("admin.personalized_scheduling_links.index.view"),
                      book_by_slug_path(slug: @personalized_link.slug),
                      target: "_blank",
                      class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
          <%= link_to t("admin.personalized_scheduling_links.index.edit"),
                      edit_admin_personalized_scheduling_link_path,
                      class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
          <%= button_to t("admin.personalized_scheduling_links.index.remove"),
                        admin_personalized_scheduling_link_path,
                        method: :delete,
                        data: { turbo_confirm: t("admin.personalized_scheduling_links.index.remove_confirm") },
                        class: "inline-flex items-center rounded-md bg-red-600 px-2.5 py-1 text-xs font-semibold text-white hover:bg-red-500" %>
        </div>
      <% else %>
        <p class="mt-1 text-xs text-slate-600"><%= t("admin.personalized_scheduling_links.index.empty_hint") %></p>
        <%= link_to t("admin.personalized_scheduling_links.index.create_button"),
                    new_admin_personalized_scheduling_link_path,
                    class: "mt-2 inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white hover:bg-slate-800" %>
      <% end %>
    </div>
  <% end %>

  <% if @scheduling_links.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.scheduling_links.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.scheduling_links.index.table.type") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.scheduling_links.index.table.status") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.scheduling_links.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @scheduling_links.each do |link| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900">
                <%= link.name.presence || "â€”" %>
              </td>
              <td class="px-4 py-2 align-top">
                <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-800">
                  <%= link.link_type.humanize %>
                </span>
              </td>
              <td class="px-4 py-2 align-top text-slate-700">
                <% if link.usable? %>
                  <span class="text-emerald-600"><%= t("admin.scheduling_links.index.active") %></span>
                <% else %>
                  <span class="text-slate-500"><%= t("admin.scheduling_links.index.inactive") %></span>
                <% end %>
              </td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("admin.scheduling_links.index.view"),
                              admin_scheduling_link_path(link),
                              class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
                  <%= link_to t("admin.scheduling_links.index.edit"),
                              edit_admin_scheduling_link_path(link),
                              class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
                  <%= button_to t("admin.scheduling_links.index.delete"),
                                admin_scheduling_link_path(link),
                                method: :delete,
                                data: { turbo_confirm: t("admin.scheduling_links.index.delete_confirm") },
                                class: "inline-flex items-center rounded-md bg-slate-700 px-2.5 py-1 text-xs font-semibold text-white hover:bg-slate-900" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 p-6 text-center text-sm text-slate-600">
      <%= t("admin.scheduling_links.index.empty") %>
    </div>
  <% end %>
</div>
