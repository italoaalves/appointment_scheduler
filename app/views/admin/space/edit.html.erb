<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("admin.space.edit.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("admin.space.edit.subtitle") %>
    </p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <%= form_with model: @space, url: admin_space_path, method: :patch, class: "space-y-4" do |form| %>
      <%= render "admin/shared/error_messages", resource: @space %>

      <div class="space-y-4">
        <h2 class="text-sm font-semibold text-slate-800"><%= t("admin.space.edit.basic_info") %></h2>
        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :name,
                           t("admin.space.edit.name_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.text_field :name,
                                required: true,
                                class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
          <div>
            <%= form.label :business_type,
                           t("admin.space.edit.business_type_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.text_field :business_type,
                               placeholder: t("admin.space.edit.business_type_placeholder"),
                               class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <h2 class="text-sm font-semibold text-slate-800"><%= t("admin.space.edit.contact") %></h2>
        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :address,
                           t("admin.space.edit.address_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.text_area :address,
                              rows: 2,
                              class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
          <div class="space-y-4">
            <div>
              <%= form.label :phone,
                             t("admin.space.edit.phone_label"),
                             class: "block text-sm font-medium text-slate-700" %>
              <%= form.telephone_field :phone,
                                      class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
            </div>
            <div>
              <%= form.label :email,
                             t("admin.space.edit.email_label"),
                             class: "block text-sm font-medium text-slate-700" %>
              <%= form.email_field :email,
                                  class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
            </div>
          </div>
        </div>
      </div>

      <div>
        <%= form.label :business_hours,
                       t("admin.space.edit.business_hours_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_area :business_hours,
                          rows: 2,
                          placeholder: t("admin.space.edit.business_hours_placeholder"),
                          class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div class="space-y-4">
        <h2 class="text-sm font-semibold text-slate-800"><%= t("admin.space.edit.socials") %></h2>
        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :instagram_url,
                           t("admin.space.edit.instagram_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.url_field :instagram_url,
                              placeholder: "https://instagram.com/...",
                              class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
          <div>
            <%= form.label :facebook_url,
                           t("admin.space.edit.facebook_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.url_field :facebook_url,
                              placeholder: "https://facebook.com/...",
                              class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <h2 class="text-sm font-semibold text-slate-800"><%= t("admin.space.edit.scheduling") %></h2>
        <div>
          <%= form.label :slot_duration_minutes,
                         t("admin.space.edit.slot_duration_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.select :slot_duration_minutes,
                          [ [ "15 #{t('admin.space.edit.minutes')}", 15 ], [ "30 #{t('admin.space.edit.minutes')}", 30 ], [ "45 #{t('admin.space.edit.minutes')}", 45 ], [ "60 #{t('admin.space.edit.minutes')}", 60 ], [ "90 #{t('admin.space.edit.minutes')}", 90 ], [ "120 #{t('admin.space.edit.minutes')}", 120 ] ],
                          {},
                          class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
      </div>

      <div>
        <%= form.label :timezone,
                       t("admin.space.edit.timezone_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_field :timezone,
                           placeholder: "America/Sao_Paulo",
                           class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div class="flex flex-wrap gap-3 pt-2">
        <%= form.submit t("admin.space.edit.submit"),
                        class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
        <%= link_to t("admin.space.edit.back_to_appointments"),
                    admin_appointments_path,
                    class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 hover:bg-slate-50" %>
      </div>
    <% end %>
  </div>
</div>
