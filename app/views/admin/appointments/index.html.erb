<div class="space-y-6">
  <div class="space-y-4">
  <% page_actions = capture do %>
    <%= link_to t("admin.appointments.index.new_button"), new_admin_appointment_path, class: button_classes(:primary) %>
    <%= link_to t("admin.appointments.index.manage_customers"), admin_customers_path, class: button_classes(:secondary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("admin.appointments.index.title"), actions: page_actions %>

  <%= form_with url: admin_appointments_path,
                method: :get,
                local: true,
                class: "flex flex-wrap items-end gap-3 rounded-xl border border-slate-200 bg-white p-4 shadow-sm" do %>
    <div class="flex flex-col gap-1">
      <label for="status" class="<%= form_label_classes_sm %>"><%= t("admin.appointments.filters.status") %></label>
      <%= select_tag :status,
                     options_for_select(
                       [
                         [ t("admin.appointments.filters.all_statuses"), "" ],
                         [ t("admin.appointments.filters.pending"), "pending" ],
                         [ t("admin.appointments.filters.confirmed"), "confirmed" ],
                         [ t("admin.appointments.filters.cancelled"), "cancelled" ],
                         [ t("admin.appointments.filters.rescheduled"), "rescheduled" ],
                         [ t("admin.appointments.filters.no_show"), "no_show" ],
                         [ t("admin.appointments.filters.finished"), "finished" ]
                       ],
                       params[:status]
                     ),
                     class: "rounded-md border-slate-300 text-sm focus:border-slate-500 focus:ring-slate-500" %>
    </div>
    <div class="flex flex-col gap-1">
      <label for="date_from" class="<%= form_label_classes_sm %>"><%= t("admin.appointments.filters.from") %></label>
      <%= date_field_tag :date_from, params[:date_from], class: "rounded-md border-slate-300 text-sm focus:border-slate-500 focus:ring-slate-500" %>
    </div>
    <div class="flex flex-col gap-1">
      <label for="date_to" class="<%= form_label_classes_sm %>"><%= t("admin.appointments.filters.to") %></label>
      <%= date_field_tag :date_to, params[:date_to], class: "rounded-md border-slate-300 text-sm focus:border-slate-500 focus:ring-slate-500" %>
    </div>
    <div class="flex gap-2">
      <%= submit_tag t("admin.appointments.filters.apply"), class: button_classes(:primary) %>
      <%= link_to t("admin.appointments.filters.clear"), admin_appointments_path, class: button_classes(:secondary) %>
    </div>
  <% end %>

  <% if @appointments.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.customer") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.scheduled") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.status") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @appointments.each do |appointment| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900">
                <%= appointment.customer&.name || "—" %>
              </td>
              <td class="px-4 py-2 align-top text-slate-700">
                <%= format_appointment_time(appointment.scheduled_at, space: appointment.space, format: :short) || "—" %>
              </td>
              <td class="px-4 py-2 align-top">
                <%= render "application/shared/status_badge", status: appointment.status %>
              </td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("admin.appointments.index.view"), admin_appointment_path(appointment), class: button_classes(:table_link) %>
                  <%= link_to t("admin.appointments.index.edit"), edit_admin_appointment_path(appointment), class: button_classes(:table_link) %>
                  <% if appointment.pending? %>
                    <%= button_to t("admin.appointments.index.confirm"), confirm_admin_appointment_path(appointment), method: :patch, class: button_classes(:table_success) %>
                  <% end %>
                  <% if appointment.confirmed? %>
                    <% if appointment.scheduled_in_past? %>
                      <%= button_to t("admin.appointments.index.no_show"), no_show_admin_appointment_path(appointment), method: :patch, data: { turbo_confirm: t("admin.appointments.index.no_show_confirm") }, class: button_classes(:table_muted) %>
                    <% end %>
                    <% if appointment.scheduled_in_past? %>
                      <%= link_to t("admin.appointments.index.finish"), finish_form_admin_appointment_path(appointment), class: button_classes(:table_success) %>
                    <% end %>
                  <% end %>
                  <% if appointment.pending? || appointment.confirmed? %>
                    <%= button_to t("admin.appointments.index.cancel"), cancel_admin_appointment_path(appointment), method: :patch, data: { turbo_confirm: t("admin.appointments.index.cancel_confirm") }, class: button_classes(:table_cancel) %>
                  <% end %>
                  <% if current_user.manager? %>
                    <%= button_to t("admin.appointments.index.delete"), admin_appointment_path(appointment), method: :delete, data: { turbo_confirm: t("admin.appointments.index.delete_confirm") }, class: button_classes(:table_danger) %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <%= render "application/shared/empty_state", content: t("admin.appointments.index.empty") %>
  <% end %>

  <% if @appointments.total_pages > 1 %>
    <div class="flex justify-center pt-6">
      <div class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-3 shadow-sm">
        <%= paginate @appointments, params: { status: params[:status], date_from: params[:date_from], date_to: params[:date_to] } %>
      </div>
    </div>
  <% end %>
  </div>
</div>
