<div class="space-y-4">
  <div class="flex items-center justify-between gap-2">
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("admin.appointments.index.title") %>
    </h1>
    <div class="flex flex-wrap items-center gap-2">
      <%= link_to t("admin.appointments.index.new_button"),
                  new_admin_appointment_path,
                  class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to t("admin.appointments.index.manage_clients"),
                  admin_clients_path,
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
    </div>
  </div>

  <% if @appointments.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.client") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.scheduled") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.status") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("admin.appointments.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @appointments.each do |appointment| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900">
                <%= appointment.client&.name || "—" %>
              </td>
              <td class="px-4 py-2 align-top text-slate-700">
                <%= appointment.scheduled_at&.strftime("%b %d, %Y %l:%M %p") || "—" %>
              </td>
              <td class="px-4 py-2 align-top">
                <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-800">
                  <%= appointment.status.humanize %>
                </span>
              </td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("admin.appointments.index.view"),
                              admin_appointment_path(appointment),
                              class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
                  <%= link_to t("admin.appointments.index.edit"),
                              edit_admin_appointment_path(appointment),
                              class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-2.5 py-1 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
                  <% if appointment.requested? %>
                    <%= button_to t("admin.appointments.index.approve"),
                                  approve_admin_appointment_path(appointment),
                                  method: :patch,
                                  class: "inline-flex items-center rounded-md bg-emerald-500 px-2.5 py-1 text-xs font-semibold text-white hover:bg-emerald-600" %>
                    <%= button_to t("admin.appointments.index.deny"),
                                  deny_admin_appointment_path(appointment),
                                  method: :patch,
                                  class: "inline-flex items-center rounded-md bg-red-500 px-2.5 py-1 text-xs font-semibold text-white hover:bg-red-600" %>
                  <% end %>
                  <% if appointment.requested? || appointment.confirmed? %>
                    <%= button_to t("admin.appointments.index.cancel"),
                                  cancel_admin_appointment_path(appointment),
                                  method: :patch,
                                  data: { turbo_confirm: t("admin.appointments.index.cancel_confirm") },
                                  class: "inline-flex items-center rounded-md bg-amber-500 px-2.5 py-1 text-xs font-semibold text-white hover:bg-amber-600" %>
                  <% end %>
                  <%= button_to t("admin.appointments.index.delete"),
                                admin_appointment_path(appointment),
                                method: :delete,
                                data: { turbo_confirm: t("admin.appointments.index.delete_confirm") },
                                class: "inline-flex items-center rounded-md bg-slate-700 px-2.5 py-1 text-xs font-semibold text-white hover:bg-slate-900" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 p-6 text-center text-sm text-slate-600">
      <%= t("admin.appointments.index.empty") %>
    </div>
  <% end %>
</div>
