<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("admin.appointments.edit.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("admin.appointments.edit.subtitle") %>
    </p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <%= form_with model: [:admin, @appointment], class: "space-y-4" do |form| %>
      <div>
        <%= form.label :user_id,
                       t("admin.appointments.edit.client_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <div class="mt-1">
          <%= form.collection_select :user_id,
                                     User.order(:email),
                                     :id, :email,
                                     {},
                                     class: "block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
      </div>

      <div>
        <%= form.label :scheduled_at,
                       t("admin.appointments.edit.scheduled_for"),
                       class: "block text-sm font-medium text-slate-700" %>
        <div class="mt-1 inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm">
          <%= form.datetime_select :scheduled_at,
                                   { start_year: Date.current.year },
                                   { class: "text-sm" } %>
        </div>
      </div>

      <div>
        <%= form.label :status,
                       t("admin.appointments.edit.status_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <div class="mt-1">
          <%= form.select :status,
                          Appointment.statuses.keys.map { |s| [s.humanize, s] },
                          {},
                          class: "block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
      </div>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("admin.appointments.edit.submit"),
                        class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
        <%= link_to t("admin.appointments.edit.back_to_appointment"),
                    admin_appointment_path(@appointment),
                    class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
        <%= link_to t("admin.appointments.edit.all_appointments"),
                    admin_appointments_path,
                    class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
      </div>
    <% end %>
  </div>
</div>
