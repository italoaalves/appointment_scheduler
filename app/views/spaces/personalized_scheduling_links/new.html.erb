<div class="space-y-4">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("space.personalized_scheduling_links.new.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("space.personalized_scheduling_links.new.subtitle") %>
    </p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <%= form_with model: @personalized_link, url: personalized_scheduling_link_path, class: "space-y-4" do |form| %>
      <%= render "application/shared/error_messages", resource: @personalized_link %>
      <div>
        <%= form.label :slug, t("space.personalized_scheduling_links.new.slug_label"), class: "block text-sm font-medium text-slate-700" %>
        <p class="mt-0.5 text-xs text-slate-500">
          <%= t("space.personalized_scheduling_links.new.slug_hint") %>
        </p>
        <div class="mt-1 flex items-center gap-2">
          <span class="text-sm text-slate-500"><%= root_url.gsub(/\/$/, "") %>/book/s/</span>
          <%= form.text_field :slug,
                              placeholder: t("space.personalized_scheduling_links.new.slug_placeholder"),
                              class: "flex-1 rounded-md border border-slate-300 px-3 py-2 text-sm shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
      </div>
      <div class="flex flex-wrap gap-3">
        <%= form.submit t("space.personalized_scheduling_links.new.submit"),
                        class: button_classes(:primary) %>
        <%= link_to t("space.personalized_scheduling_links.new.cancel"),
                    scheduling_links_path,
                    class: button_classes(:secondary) %>
      </div>
    <% end %>
  </div>
</div>
