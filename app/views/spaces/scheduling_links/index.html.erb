<div class="space-y-4">
  <% page_actions = capture do %>
    <% if Billing::PlanEnforcer.can?(current_tenant, :create_scheduling_link) %>
      <%= link_to t("space.scheduling_links.index.new_button"), new_scheduling_link_path, class: button_classes(:primary) %>
    <% else %>
      <span class="text-sm text-slate-500"><%= t("billing.limits.scheduling_links_exceeded") %></span>
    <% end %>
    <%= link_to t("space.scheduling_links.index.back_to_appointments"), appointments_path, class: button_classes(:secondary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("space.scheduling_links.index.title"), actions: page_actions %>

  <% if current_user.can?(:manage_personalized_links) %>
    <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
      <h2 class="text-sm font-semibold text-slate-800"><%= t("space.personalized_scheduling_links.index.title") %></h2>
      <% if @personalized_link.present? %>
        <p class="mt-1 text-xs text-slate-600"><%= t("space.personalized_scheduling_links.index.has_link_hint") %></p>
        <div class="mt-2 flex flex-wrap items-center gap-2">
          <input type="text"
                 readonly
                 value="<%= book_by_slug_url(slug: @personalized_link.slug) %>"
                 class="block flex-1 min-w-0 rounded-md border border-slate-300 bg-slate-50 px-2 py-1.5 text-xs text-slate-700" />
          <button type="button"
                  data-controller="clipboard"
                  data-clipboard-text-value="<%= book_by_slug_url(slug: @personalized_link.slug) %>"
                  data-action="click->clipboard#copy"
                  class="<%= button_classes(:table_link) %>">
            <%= t("space.scheduling_links.show.copy") %>
          </button>
          <%= link_to t("space.personalized_scheduling_links.index.view"), book_by_slug_path(slug: @personalized_link.slug), target: "_blank", class: button_classes(:table_link) %>
          <%= link_to t("space.personalized_scheduling_links.index.edit"), edit_personalized_scheduling_link_path, class: button_classes(:table_link) %>
          <%= button_to t("space.personalized_scheduling_links.index.remove"), personalized_scheduling_link_path, method: :delete, data: { turbo_confirm: t("space.personalized_scheduling_links.index.remove_confirm") }, class: "inline-flex items-center rounded-md bg-red-600 px-2.5 py-1 text-xs font-semibold text-white hover:bg-red-500" %>
        </div>
      <% else %>
        <p class="mt-1 text-xs text-slate-600"><%= t("space.personalized_scheduling_links.index.empty_hint") %></p>
        <%= link_to t("space.personalized_scheduling_links.index.create_button"), new_personalized_scheduling_link_path, class: "mt-2 #{button_classes(:primary)}" %>
      <% end %>
    </div>
  <% end %>

  <% if @scheduling_links.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.scheduling_links.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.scheduling_links.index.table.type") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.scheduling_links.index.table.status") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.scheduling_links.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @scheduling_links.each do |link| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900">
                <%= link.name.presence || "â€”" %>
              </td>
              <td class="px-4 py-2 align-top">
                <%= render "application/shared/status_badge", status: nil, label: link.link_type.humanize %>
              </td>
              <td class="px-4 py-2 align-top text-slate-700">
                <% if link.usable? %>
                  <span class="text-emerald-600"><%= t("space.scheduling_links.index.active") %></span>
                <% else %>
                  <span class="text-slate-500"><%= t("space.scheduling_links.index.inactive") %></span>
                <% end %>
              </td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("space.scheduling_links.index.view"), scheduling_link_path(link), class: button_classes(:table_link) %>
                  <%= link_to t("space.scheduling_links.index.edit"), edit_scheduling_link_path(link), class: button_classes(:table_link) %>
                  <%= button_to t("space.scheduling_links.index.delete"), scheduling_link_path(link), method: :delete, data: { turbo_confirm: t("space.scheduling_links.index.delete_confirm") }, class: button_classes(:table_danger) %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <%= render "application/shared/empty_state",
               content: t("space.scheduling_links.index.empty"),
               cta_path: (new_scheduling_link_path if Billing::PlanEnforcer.can?(current_tenant, :create_scheduling_link)),
               cta_text: t("space.scheduling_links.index.create_cta") %>
  <% end %>
</div>
