<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("space.scheduling_links.edit.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("space.scheduling_links.edit.subtitle") %>
    </p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <%= form_with model: @scheduling_link, class: "space-y-4" do |form| %>
      <%= render "application/shared/error_messages", resource: @scheduling_link %>

      <div>
        <%= form.label :name,
                       t("space.scheduling_links.edit.name_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_field :name,
                            placeholder: t("space.scheduling_links.edit.name_placeholder"),
                            class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div data-controller="scheduling-link-form">
        <div>
          <%= form.label :link_type,
                         t("space.scheduling_links.edit.link_type_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.select :link_type,
                          [ [ t("space.scheduling_links.types.permanent"), "permanent" ], [ t("space.scheduling_links.types.single_use"), "single_use" ] ],
                          {},
                          class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500",
                          data: { action: "change->scheduling-link-form#toggleExpires" } %>
        </div>

        <div id="expires_at_field" class="mt-4 <%= @scheduling_link.permanent? ? "hidden" : "" %>" data-scheduling-link-form-target="expiresField">
        <%= form.label :expires_at,
                       t("space.scheduling_links.edit.expires_at_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.datetime_local_field :expires_at,
                                      min: 1.hour.from_now.iso8601,
                                      class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
      </div>

      <div class="flex flex-wrap gap-3 pt-2">
        <%= form.submit t("space.scheduling_links.edit.submit"),
                        class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
        <%= link_to t("space.scheduling_links.edit.back"),
                    scheduling_link_path(@scheduling_link),
                    class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 hover:bg-slate-50" %>
      </div>
    <% end %>
  </div>
</div>
