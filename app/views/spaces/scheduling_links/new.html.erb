<% content_for(:breadcrumbs) { render "shared/breadcrumbs", crumbs: [
  { label: t("breadcrumbs.dashboard"), path: root_path },
  { label: t("breadcrumbs.booking_links"), path: scheduling_links_path },
  { label: t("breadcrumbs.new") }
] } %>
<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("space.scheduling_links.new.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("space.scheduling_links.new.subtitle") %>
    </p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <%= form_with model: @scheduling_link, class: "space-y-4" do |form| %>
      <%= render "application/shared/error_messages", resource: @scheduling_link %>

      <div>
        <%= form.label :name,
                       t("space.scheduling_links.new.name_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_field :name,
                            placeholder: t("space.scheduling_links.new.name_placeholder"),
                            class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div x-data="{ linkType: '<%= @scheduling_link.link_type || "permanent" %>' }">
        <div>
          <%= form.label :link_type,
                         t("space.scheduling_links.new.link_type_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.select :link_type,
                          [ [ t("space.scheduling_links.types.permanent"), "permanent" ], [ t("space.scheduling_links.types.single_use"), "single_use" ] ],
                          {},
                          class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500",
                          "x-model": "linkType" %>
        </div>

        <div id="expires_at_field"
             class="mt-4"
             x-show="linkType === 'single_use'"
             x-transition
             x-cloak>
          <%= form.label :expires_at,
                         t("space.scheduling_links.new.expires_at_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.datetime_local_field :expires_at,
                                        min: 1.hour.from_now.iso8601,
                                        class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
        </div>
      </div>

      <div class="flex flex-wrap gap-3 pt-2">
        <%= form.submit t("space.scheduling_links.new.submit"),
                        class: button_classes(:primary),
                        data: { turbo_submits_with: t("shared.submitting") } %>
      </div>
    <% end %>
  </div>
</div>
