<% content_for(:breadcrumbs) { render "shared/breadcrumbs", crumbs: [
  { label: t("breadcrumbs.dashboard"), path: root_path },
  { label: t("breadcrumbs.team"), path: users_path },
  { label: @user.name.presence || @user.email }
] } %>
<div class="space-y-6">
  <header class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
        <%= t("space.users.show.title") %>
      </h1>
      <p class="mt-1 text-xs text-slate-600">
        <%= t("space.users.show.subtitle") %>
      </p>
    </div>
    <% if @user.space_owner?(current_tenant) %>
      <span class="inline-flex items-center rounded-full bg-amber-100 px-3 py-1 text-xs font-medium text-amber-800"><%= t("space.users.owner") %></span>
    <% elsif @user.role.present? %>
      <span class="inline-flex items-center rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-800">
        <%= @user.role %>
      </span>
    <% end %>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
    <dl class="space-y-3 text-sm">
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("space.users.show.email") %></dt>
        <dd class="text-slate-900"><%= @user.email %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("space.users.show.name") %></dt>
        <dd class="text-slate-900"><%= @user.name.presence || "—" %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("space.users.show.phone") %></dt>
        <dd class="text-slate-900"><%= @user.phone_number.presence || "—" %></dd>
      </div>
    </dl>
  </div>

  <div class="flex flex-wrap gap-3">
    <% if current_user.can?(:manage_team) %>
      <%= link_to t("space.users.show.edit_team_member"),
                  edit_user_path(@user),
                  class: button_classes(:primary) %>
      <% unless @user.space_owner?(current_tenant) %>
        <%= button_to t("space.users.show.delete_team_member"),
                      user_path(@user),
                      method: :delete,
                      data: { turbo_confirm: t("space.users.show.delete_team_member_confirm"), turbo_submits_with: t("shared.deleting") },
                      class: button_classes(:danger) %>
      <% end %>
    <% end %>
  </div>

  <section class="space-y-3">
    <h2 class="text-sm font-semibold text-slate-900">
      <%= t("space.users.show.appointments_title") %>
    </h2>

    <% if @user.appointments.any? %>
      <ul class="space-y-2">
        <% @user.appointments.each do |appointment| %>
          <li class="rounded-lg border border-slate-200 bg-white p-3 text-sm shadow-sm">
            <div class="flex items-start justify-between gap-3">
              <div>
                <p class="text-slate-900">
                  <%= format_appointment_time(appointment.scheduled_at, space: appointment.space, format: :long) || "—" %>
                </p>
                <p class="mt-0.5 text-xs text-slate-500">
                  <%= t("space.users.show.status_prefix") %> <%= t("activerecord.attributes.appointment.status.#{appointment.status}") %>
                </p>
              </div>
              <%= link_to t("space.appointments.index.view"),
                          appointment_path(appointment),
                          class: button_classes(:table_link) %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-sm text-slate-600">
        <%= t("space.users.show.no_appointments") %>
      </p>
    <% end %>
  </section>
</div>
