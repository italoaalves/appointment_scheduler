<% content_for(:breadcrumbs) { render "shared/breadcrumbs", crumbs: [
  { label: t("breadcrumbs.dashboard"), path: root_path },
  { label: t("breadcrumbs.team"), path: users_path },
  { label: @user.name.presence || @user.email, path: user_path(@user) },
  { label: t("breadcrumbs.edit") }
] } %>
<div class="space-y-6">
  <%= render "application/shared/page_header", title: t("space.users.edit.title"), subtitle: t("space.users.edit.subtitle") %>

  <%= render layout: "application/shared/card" do %>
    <%= form_with model: @user, class: "space-y-4" do |form| %>
      <%= render "permission_fields", form: form %>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("space.users.edit.submit"), class: button_classes(:primary), data: { turbo_submits_with: t("shared.submitting") } %>
      </div>
    <% end %>
  <% end %>
</div>
