<div class="space-y-6">
  <%= render "application/shared/page_header", title: t("space.users.edit.title"), subtitle: t("space.users.edit.subtitle") %>

  <%= render layout: "application/shared/card" do %>
    <%= form_with model: @user, class: "space-y-4" do |form| %>
      <%= render "permission_fields", form: form %>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("space.users.edit.submit"), class: button_classes(:primary) %>
        <%= link_to t("space.users.edit.back_to_user"), user_path(@user), class: button_classes(:secondary) %>
        <%= link_to t("space.users.edit.all_team"), users_path, class: button_classes(:secondary) %>
      </div>
    <% end %>
  <% end %>
</div>
