<div class="space-y-6">
  <%= render "application/shared/page_header", title: t("space.users.new.title"), subtitle: t("space.users.new.subtitle") %>

  <%= render layout: "application/shared/card" do %>
    <%= form_with model: @user, class: "space-y-4" do |form| %>
      <div>
        <%= form.label :email,
                       class: form_label_classes %>
        <%= form.email_field :email,
                             required: true,
                             class: form_input_classes %>
      </div>

      <div>
        <%= form.label :name,
                       class: form_label_classes %>
        <%= form.text_field :name,
                            class: form_input_classes %>
      </div>

      <div>
        <%= form.label :phone_number,
                       t("space.users.new.phone_label"),
                       class: form_label_classes %>
        <%= form.telephone_field :phone_number,
                                 class: form_input_classes %>
      </div>

      <%= render "users/permission_fields", form: form %>

      <div class="grid gap-4 sm:grid-cols-2">
        <div>
          <%= form.label :password,
                         t("space.users.new.password_label"),
                         class: form_label_classes %>
          <%= form.password_field :password,
                                  class: form_input_classes("max-w-none") %>
        </div>
        <div>
          <%= form.label :password_confirmation,
                         t("space.users.new.password_confirmation_label"),
                         class: form_label_classes %>
          <%= form.password_field :password_confirmation,
                                  class: form_input_classes("max-w-none") %>
        </div>
      </div>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("space.users.new.submit"),
                        class: button_classes(:primary) %>
        <%= link_to t("space.users.new.back_to_team"),
                    users_path,
                    class: button_classes(:secondary) %>
      </div>
    <% end %>
  <% end %>
</div>
