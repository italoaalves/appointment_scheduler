<div class="space-y-6">
  <%= render "application/shared/page_header", title: t("space.users.new.title"), subtitle: t("space.users.new.subtitle") %>

  <%= render layout: "application/shared/card" do %>
    <%= form_with model: @user, class: "space-y-4" do |form| %>
      <%= render "application/shared/error_messages", resource: @user %>

      <div>
        <%= form.label :email,
                       class: form_label_classes %>
        <%= form.email_field :email,
                             required: true,
                             class: form_input_classes %>
      </div>

      <div>
        <%= form.label :name,
                       class: form_label_classes %>
        <%= form.text_field :name,
                            class: form_input_classes %>
      </div>

      <div>
        <%= form.label :phone_number,
                       t("space.users.new.phone_label"),
                       class: form_label_classes %>
        <%= form.telephone_field :phone_number,
                                 class: form_input_classes %>
      </div>

      <%= render "permission_fields", form: form %>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("space.users.new.submit"),
                        class: button_classes(:primary),
                        data: { turbo_submits_with: t("shared.submitting") } %>
        <%= link_to t("space.users.new.back_to_team"),
                    users_path,
                    class: button_classes(:secondary) %>
      </div>
    <% end %>
  <% end %>
</div>
