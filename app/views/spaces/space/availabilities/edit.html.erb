<% content_for(:breadcrumbs) { render "shared/breadcrumbs", crumbs: [
  { label: t("breadcrumbs.dashboard"), path: root_path },
  { label: t("breadcrumbs.settings"), path: edit_settings_space_path },
  { label: t("breadcrumbs.availability") }
] } %>
<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("space.availability.edit.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("space.availability.edit.subtitle") %>
    </p>
  </header>

  <%= form_with model: @space, url: settings_space_availability_path, method: :patch, class: "space-y-6" do |form| %>
    <%= render "application/shared/error_messages", resource: @space %>

    <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="mb-4 text-sm font-semibold text-slate-800"><%= t("space.availability.edit.normal_hours_title") %></h2>
      <%= render "spaces/space/availability_schedule_fields", form: form %>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="mb-4 text-sm font-semibold text-slate-800"><%= t("space.availability.edit.scheduling_title") %></h2>
      <div class="space-y-4">
        <div>
          <%= form.label :slot_duration_minutes,
                         t("space.settings.edit.slot_duration_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.select :slot_duration_minutes,
                          [ [ "15 #{t('space.settings.edit.minutes')}", 15 ], [ "30 #{t('space.settings.edit.minutes')}", 30 ], [ "45 #{t('space.settings.edit.minutes')}", 45 ], [ "60 #{t('space.settings.edit.minutes')}", 60 ], [ "90 #{t('space.settings.edit.minutes')}", 90 ], [ "120 #{t('space.settings.edit.minutes')}", 120 ] ],
                          {},
                          class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          <p class="mt-1.5 text-xs text-slate-500">
            <%= t("space.settings.edit.slot_duration_notice") %>
          </p>
        </div>
        <% show_other = @space.timezone.present? && !ApplicationHelper::COMMON_TIMEZONES.include?(@space.timezone) %>
        <% tz_select_initial = show_other ? ApplicationHelper::OTHER_TIMEZONE_VALUE : (@space.timezone.presence || "") %>
        <% tz_other_initial = show_other ? @space.timezone : "" %>
        <div x-data="{ tzSelect: <%= tz_select_initial.to_json %>, tzOther: <%= tz_other_initial.to_json %> }">
          <label for="space_timezone"
                 class="block text-sm font-medium text-slate-700"><%= t("space.settings.edit.timezone_label") %></label>
          <input type="hidden"
                 name="space[timezone]"
                 :value="tzSelect === '<%= ApplicationHelper::OTHER_TIMEZONE_VALUE %>' ? tzOther : tzSelect">
          <div class="mt-1 max-w-sm space-y-2">
            <select id="space_timezone"
                    x-model="tzSelect"
                    class="block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500">
              <% options = common_timezone_options_for_select(@space.timezone) %>
              <% options.each do |label, value| %>
                <option value="<%= value %>"><%= label %></option>
              <% end %>
            </select>
            <input type="text"
                   x-show="tzSelect === '<%= ApplicationHelper::OTHER_TIMEZONE_VALUE %>'"
                   x-transition
                   x-cloak
                   x-model="tzOther"
                   placeholder="<%= t('space.settings.edit.timezone_other_placeholder') %>"
                   class="block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" />
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap gap-3">
      <%= form.submit t("space.availability.edit.submit"),
                      class: button_classes(:primary),
                      data: { turbo_submits_with: t("shared.submitting") } %>
      <%= link_to t("space.availability.edit.back_to_space"),
                  edit_settings_space_path,
                  class: button_classes(:secondary) %>
      <%= link_to t("space.settings.edit.back_to_appointments"),
                  appointments_path,
                  class: button_classes(:secondary) %>
    </div>
  <% end %>
</div>
