<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("space.settings.edit.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("space.settings.edit.subtitle") %>
    </p>
  </header>

  <%= form_with model: @space, url: settings_space_path, method: :patch, class: "space-y-6" do |form| %>
    <%= render "application/shared/error_messages", resource: @space %>

    <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="mb-4 text-sm font-semibold text-slate-800"><%= t("space.settings.edit.basic_info") %></h2>
        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :name,
                           t("space.settings.edit.name_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.text_field :name,
                                required: true,
                                class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
          <div>
            <%= form.label :business_type,
                           t("space.settings.edit.business_type_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.text_field :business_type,
                               placeholder: t("space.settings.edit.business_type_placeholder"),
                               class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
        </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="mb-4 text-sm font-semibold text-slate-800"><%= t("space.settings.edit.contact") %></h2>
        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :address,
                           t("space.settings.edit.address_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.text_area :address,
                              rows: 2,
                              class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
          <div class="space-y-4">
            <div>
              <%= form.label :phone,
                             t("space.settings.edit.phone_label"),
                             class: "block text-sm font-medium text-slate-700" %>
              <%= form.telephone_field :phone,
                                      class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
            </div>
            <div>
              <%= form.label :email,
                             t("space.settings.edit.email_label"),
                             class: "block text-sm font-medium text-slate-700" %>
              <%= form.email_field :email,
                                  class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
            </div>
          </div>
        </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="mb-4 text-sm font-semibold text-slate-800"><%= t("space.settings.edit.socials") %></h2>
      <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :instagram_url,
                           t("space.settings.edit.instagram_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.url_field :instagram_url,
                              placeholder: "https://instagram.com/...",
                              class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
          <div>
            <%= form.label :facebook_url,
                           t("space.settings.edit.facebook_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.url_field :facebook_url,
                              placeholder: "https://facebook.com/...",
                              class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          </div>
        </div>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="mb-4 text-sm font-semibold text-slate-800"><%= t("space.settings.edit.scheduling") %></h2>
      <div class="space-y-6">
        <div>
          <%= link_to edit_settings_space_availability_path,
                      class: "inline-flex items-center gap-2 rounded-md border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-medium text-slate-800 hover:bg-slate-100" do %>
            <%= t("space.settings.edit.availability_title") %>
            <span aria-hidden="true">→</span>
          <% end %>
          <p class="mt-2 text-xs text-slate-500"><%= t("space.settings.edit.availability_link_hint") %></p>
        </div>
        <% if current_user.can?(:manage_policies, space: @space) %>
          <div>
            <%= link_to edit_settings_space_policies_path,
                        class: "inline-flex items-center gap-2 rounded-md border border-slate-200 bg-slate-50 px-4 py-3 text-sm font-medium text-slate-800 hover:bg-slate-100" do %>
              <%= t("space.settings.edit.policies_title") %>
              <span aria-hidden="true">→</span>
            <% end %>
            <p class="mt-2 text-xs text-slate-500"><%= t("space.settings.edit.policies_link_hint") %></p>
          </div>
        <% end %>
        <div>
          <%= form.label :booking_success_message,
                         t("space.settings.edit.booking_success_message_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.text_area :booking_success_message,
                            rows: 3,
                            placeholder: t("space.settings.edit.booking_success_message_placeholder"),
                            class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          <p class="mt-1.5 text-xs text-slate-500">
            <%= t("space.settings.edit.booking_success_message_hint") %>
          </p>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap gap-3">
      <%= form.submit t("space.settings.edit.submit"),
                      class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to t("space.settings.edit.back_to_appointments"),
                  appointments_path,
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 hover:bg-slate-50" %>
    </div>
  <% end %>
</div>
