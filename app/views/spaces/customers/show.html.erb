<div class="space-y-6">
  <header class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
        <%= t("space.customers.show.title") %>
      </h1>
      <p class="mt-1 text-xs text-slate-600">
        <%= t("space.customers.show.subtitle") %>
      </p>
    </div>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
    <dl class="space-y-3 text-sm">
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("space.customers.show.name") %></dt>
        <dd class="text-slate-900"><%= @customer.name %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("space.customers.show.phone") %></dt>
        <dd class="text-slate-900"><%= @customer.phone.presence || "—" %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("space.customers.show.email") %></dt>
        <dd class="text-slate-900"><%= @customer.email.presence || "—" %></dd>
      </div>
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("space.customers.show.address") %></dt>
        <dd class="text-slate-900"><%= @customer.address.presence || "—" %></dd>
      </div>
    </dl>
  </div>

  <div class="flex flex-wrap gap-3">
    <%= link_to t("space.customers.show.edit_customer"),
                edit_customer_path(@customer),
                class: button_classes(:primary) %>
    <%= link_to t("space.customers.show.all_customers"),
                customers_path,
                class: button_classes(:secondary) %>
    <%= button_to t("space.customers.show.delete_customer"),
                  customer_path(@customer),
                  method: :delete,
                  data: { turbo_confirm: t("space.customers.show.delete_customer_confirm") },
                  class: button_classes(:danger) %>
  </div>

  <section class="space-y-3">
    <h2 class="text-sm font-semibold text-slate-900">
      <%= t("space.customers.show.appointments_title") %>
    </h2>

    <% if @appointments.any? %>
      <ul class="space-y-2">
        <% @appointments.each do |appointment| %>
          <li class="rounded-lg border border-slate-200 bg-white p-3 text-sm shadow-sm">
            <div class="flex items-start justify-between gap-3">
              <div>
                <p class="text-slate-900">
                  <%= format_appointment_time(appointment.scheduled_at, space: appointment.space, format: :long) || "—" %>
                </p>
                <p class="mt-0.5 text-xs text-slate-500">
                  <%= t("space.customers.show.status_prefix") %> <%= t("activerecord.attributes.appointment.status.#{appointment.status}") %>
                </p>
              </div>
              <%= link_to t("space.appointments.index.view"),
                          appointment_path(appointment),
                          class: button_classes(:table_link) %>
            </div>
          </li>
        <% end %>
      </ul>
      <%= paginate @appointments %>
    <% else %>
      <p class="text-sm text-slate-600">
        <%= t("space.customers.show.no_appointments") %>
      </p>
    <% end %>
  </section>
</div>
