<div class="space-y-4">
  <% page_actions = capture do %>
    <% if Billing::PlanEnforcer.can?(current_tenant, :create_customer) %>
      <%= link_to t("space.customers.index.new_button"), new_customer_path, class: button_classes(:primary) %>
    <% else %>
      <span class="text-sm text-slate-500"><%= t("billing.limits.customers_exceeded") %></span>
    <% end %>
    <%= link_to t("space.customers.index.all_appointments"), appointments_path, class: button_classes(:secondary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("space.customers.index.title"), actions: page_actions %>

  <% if @customers.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.customers.index.table.name") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.customers.index.table.phone") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.customers.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @customers.each do |customer| %>
            <tr class="hover:bg-slate-50">
              <td class="px-4 py-2 align-top text-slate-900"><%= customer.name %></td>
              <td class="px-4 py-2 align-top text-slate-700"><%= customer.phone.presence || "â€”" %></td>
              <td class="px-4 py-2 align-top">
                <div class="flex flex-wrap justify-end gap-1">
                  <%= link_to t("space.customers.index.view"), customer_path(customer), class: button_classes(:table_link) %>
                  <%= link_to t("space.customers.index.edit"), edit_customer_path(customer), class: button_classes(:table_link) %>
                  <%= button_to t("space.customers.index.delete"), customer_path(customer), method: :delete, data: { turbo_confirm: t("space.customers.index.delete_confirm") }, class: button_classes(:danger) %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <%= render "application/shared/empty_state", content: t("space.customers.index.empty") %>
  <% end %>
</div>
