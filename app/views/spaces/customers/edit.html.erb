<div class="space-y-6">
  <%= render "application/shared/page_header",
             title: t("space.customers.edit.title"),
             subtitle: t("space.customers.edit.subtitle") %>

  <%= render layout: "application/shared/card" do %>
    <%= form_with model: @customer, class: "space-y-4" do |form| %>
      <%= render "application/shared/error_messages", resource: @customer %>

      <div>
        <%= form.label :name, t("space.customers.edit.name_label"), class: form_label_classes %>
        <%= form.text_field :name, required: true, class: form_input_classes %>
      </div>

      <div>
        <%= form.label :phone, t("space.customers.edit.phone_label"), class: form_label_classes %>
        <%= form.telephone_field :phone, class: form_input_classes %>
      </div>

      <div>
        <%= form.label :email, t("space.customers.edit.email_label"), class: form_label_classes %>
        <%= form.email_field :email, class: form_input_classes %>
      </div>

      <div>
        <%= form.label :address, t("space.customers.edit.address_label"), class: form_label_classes %>
        <%= form.text_field :address, class: form_input_classes %>
      </div>

      <div class="flex flex-wrap gap-3">
        <%= form.submit t("space.customers.edit.submit"), class: button_classes(:primary), data: { turbo_submits_with: t("shared.submitting") } %>
        <%= link_to t("space.customers.edit.back_to_customer"), customer_path(@customer), class: button_classes(:secondary) %>
        <%= link_to t("space.customers.edit.all_customers"), customers_path, class: button_classes(:secondary) %>
      </div>
    <% end %>
  <% end %>
</div>
