<div class="space-y-6">
  <% page_actions = capture do %>
    <%= link_to t("space.appointments.pending.all_appointments"), appointments_path, class: button_classes(:secondary) %>
    <%= link_to t("space.appointments.index.new_button"), new_appointment_path, class: button_classes(:primary) %>
  <% end %>
  <%= render "application/shared/page_header",
             title: t("space.appointments.pending.title"),
             subtitle: t("space.appointments.pending.subtitle", count: @appointments.total_count),
             actions: page_actions %>

  <% if @appointments.any? %>
    <ul class="space-y-3">
      <% @appointments.each do |appointment| %>
        <li class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm hover:border-slate-300">
          <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <div class="min-w-0 flex-1">
              <div class="flex flex-wrap items-center gap-2">
                <%= link_to appointment_path(appointment), class: "font-medium text-slate-900 hover:underline" do %>
                  <%= appointment.customer&.name || "—" %>
                <% end %>
                <% if appointment.customer&.phone.present? %>
                  <span class="text-xs text-slate-500">· <%= appointment.customer.phone %></span>
                <% end %>
              </div>
              <div class="mt-1 flex flex-wrap gap-x-4 gap-y-0 text-xs text-slate-600">
                <span>
                  <%= t("space.appointments.pending.requested") %>:
                  <%= format_appointment_time(appointment.requested_at, space: appointment.space, format: :short) || "—" %>
                </span>
                <span>
                  <%= t("space.appointments.pending.preferred") %>:
                  <%= format_appointment_time(appointment.scheduled_at, space: appointment.space, format: :short) || t("space.appointments.pending.to_be_scheduled") %>
                </span>
              </div>
            </div>
            <div class="flex shrink-0 flex-wrap items-center gap-2">
              <%= button_to t("space.appointments.index.confirm"), confirm_appointment_path(appointment), method: :patch, class: button_classes(:success) %>
              <%= link_to t("space.appointments.index.edit"), edit_appointment_path(appointment), class: button_classes(:secondary) %>
              <%= button_to t("space.appointments.index.cancel"), cancel_appointment_path(appointment), method: :patch, data: { turbo_confirm: t("space.appointments.index.cancel_confirm") }, class: button_classes(:cancel) %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>

    <% if @appointments.total_pages > 1 %>
      <div class="flex justify-center pt-4">
        <%= paginate @appointments %>
      </div>
    <% end %>
  <% else %>
    <div class="rounded-xl border border-dashed border-slate-300 bg-slate-50 p-12 text-center">
      <p class="text-sm font-medium text-slate-700"><%= t("space.appointments.pending.empty_title") %></p>
      <p class="mt-1 text-sm text-slate-600"><%= t("space.appointments.pending.empty_body") %></p>
      <%= link_to t("space.appointments.pending.view_all"), appointments_path, class: "mt-4 #{button_classes(:primary)}" %>
    </div>
  <% end %>
</div>
