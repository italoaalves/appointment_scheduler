<% content_for(:breadcrumbs) { render "shared/breadcrumbs", crumbs: [
  { label: t("breadcrumbs.dashboard"), path: root_path },
  { label: t("breadcrumbs.appointments") }
] } %>
<div class="space-y-6">
  <div class="space-y-4">
  <% page_actions = capture do %>
    <%= link_to t("space.appointments.index.new_button"), new_appointment_path, class: button_classes(:primary) %>
  <% end %>
  <%= render "application/shared/page_header", title: t("space.appointments.index.title"), actions: page_actions %>

  <%= form_with url: appointments_path,
                method: :get,
                local: true,
                class: "flex flex-wrap items-end gap-3 rounded-xl border border-slate-200 bg-white p-4 shadow-sm" do %>
    <div class="flex flex-col gap-1">
      <label for="status" class="<%= form_label_classes_sm %>"><%= t("space.appointments.filters.status") %></label>
      <%= select_tag :status,
                     options_for_select(
                       [
                         [ t("space.appointments.filters.all_statuses"), "" ],
                         [ t("space.appointments.filters.pending"), "pending" ],
                         [ t("space.appointments.filters.confirmed"), "confirmed" ],
                         [ t("space.appointments.filters.cancelled"), "cancelled" ],
                         [ t("space.appointments.filters.rescheduled"), "rescheduled" ],
                         [ t("space.appointments.filters.no_show"), "no_show" ],
                         [ t("space.appointments.filters.finished"), "finished" ]
                       ],
                       params[:status]
                     ),
                     class: "rounded-md border-slate-300 text-sm focus:border-slate-500 focus:ring-slate-500" %>
    </div>
    <div class="flex flex-col gap-1">
      <label for="date_from" class="<%= form_label_classes_sm %>"><%= t("space.appointments.filters.from") %></label>
      <%= date_field_tag :date_from, params[:date_from], class: "rounded-md border-slate-300 text-sm focus:border-slate-500 focus:ring-slate-500" %>
    </div>
    <div class="flex flex-col gap-1">
      <label for="date_to" class="<%= form_label_classes_sm %>"><%= t("space.appointments.filters.to") %></label>
      <%= date_field_tag :date_to, params[:date_to], class: "rounded-md border-slate-300 text-sm focus:border-slate-500 focus:ring-slate-500" %>
    </div>
    <div class="flex gap-2">
      <%= submit_tag t("space.appointments.filters.apply"), class: button_classes(:primary), data: { turbo_submits_with: t("shared.submitting") } %>
      <%= link_to t("space.appointments.filters.clear"), appointments_path, class: button_classes(:secondary) %>
    </div>
  <% end %>

  <% if @appointments.any? %>
    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-sm">
      <table class="min-w-full divide-y divide-slate-200 text-sm">
        <thead class="bg-slate-50">
          <tr>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.appointments.index.table.customer") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.appointments.index.table.scheduled") %>
            </th>
            <th scope="col" class="px-4 py-2 text-left text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.appointments.index.table.status") %>
            </th>
            <th scope="col" class="px-4 py-2 text-right text-xs font-semibold uppercase tracking-wide text-slate-500">
              <%= t("space.appointments.index.table.actions") %>
            </th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-200">
          <% @appointments.each do |appointment| %>
            <%= render "appointment_row", appointment: appointment %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <%= render "application/shared/empty_state", content: t("space.appointments.index.empty") %>
  <% end %>

  <% if @appointments.total_pages > 1 %>
    <div class="flex justify-center pt-6">
      <div class="inline-flex items-center gap-2 rounded-xl border border-slate-200 bg-white px-4 py-3 shadow-sm">
        <%= paginate @appointments, params: { status: params[:status], date_from: params[:date_from], date_to: params[:date_to] } %>
      </div>
    </div>
  <% end %>
  </div>
</div>
