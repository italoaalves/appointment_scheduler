<span id="pending_appointments_badge">
  <% if count > 0 %>
    <span class="ml-1.5 inline-flex items-center justify-center rounded-full bg-amber-500 px-1.5 py-0.5 text-[10px] font-bold text-white leading-none"
          title="<%= t("layout.nav.pending_count", count: count) %>"
          aria-label="<%= t("layout.nav.pending_count", count: count) %>">
      <%= count %>
    </span>
  <% end %>
</span>
