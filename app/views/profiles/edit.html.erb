<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("profiles.edit.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("profiles.edit.subtitle") %>
    </p>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-4" do |form| %>
      <%= render "admin/shared/error_messages", resource: @user %>

      <div>
        <%= form.label :name,
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.text_field :name,
                            class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div>
        <%= form.label :phone_number,
                       t("profiles.edit.phone_label"),
                       class: "block text-sm font-medium text-slate-700" %>
        <%= form.telephone_field :phone_number,
                                 class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
      </div>

      <div class="border-t border-slate-200 pt-4">
        <p class="text-sm font-medium text-slate-700 mb-2"><%= t("profiles.edit.password_section") %></p>
        <div class="grid gap-4 sm:grid-cols-2">
          <div>
            <%= form.label :current_password,
                           t("profiles.edit.current_password_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.password_field :current_password,
                                    class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500",
                                    autocomplete: "current-password" %>
          </div>
          <div></div>
          <div>
            <%= form.label :password,
                           t("profiles.edit.password_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.password_field :password,
                                    class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500",
                                    autocomplete: "new-password" %>
          </div>
          <div>
            <%= form.label :password_confirmation,
                           t("profiles.edit.password_confirmation_label"),
                           class: "block text-sm font-medium text-slate-700" %>
            <%= form.password_field :password_confirmation,
                                    class: "mt-1 block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500",
                                    autocomplete: "new-password" %>
          </div>
        </div>
        <p class="mt-1 text-xs text-slate-500"><%= t("profiles.edit.password_hint") %></p>
      </div>

      <div class="flex flex-wrap gap-3 pt-2">
        <%= form.submit t("profiles.edit.submit"),
                        class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-slate-800" %>
        <%= link_to t("profiles.edit.back"),
                    root_path,
                    class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-sm font-semibold text-slate-800 shadow-sm hover:bg-slate-50" %>
      </div>
    <% end %>
  </div>
</div>
