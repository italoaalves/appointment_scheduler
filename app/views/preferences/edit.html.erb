<div class="space-y-6">
  <%= render "application/shared/page_header", title: t("preferences.edit.title"), subtitle: t("preferences.edit.subtitle") %>

  <%= render layout: "application/shared/card" do %>
    <%= form_with model: @user_preference, url: preferences_path, method: :patch, class: "space-y-4" do |form| %>
      <%= render "application/shared/error_messages", resource: @user_preference %>

      <div>
        <%= form.label :locale, t("preferences.edit.locale_label"), class: form_label_classes %>
        <%= form.select :locale,
                        I18n.available_locales.map { |l| [ t("layout.nav.language.#{l == :'pt-BR' ? :pt : l}"), l.to_s ] },
                        {},
                        class: form_input_classes %>
      </div>

      <div class="flex flex-wrap gap-3 pt-2">
        <%= form.submit t("preferences.edit.submit"), class: button_classes(:primary) %>
        <%= link_to t("preferences.edit.back"), root_path, class: button_classes(:secondary) %>
      </div>
    <% end %>
  <% end %>
</div>
