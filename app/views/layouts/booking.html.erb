<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || @space&.name || t("layout.app_name") %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.13/dist/flatpickr.min.css">
    <%= javascript_importmap_tags %>
  </head>
  <body class="min-h-screen bg-slate-50 text-slate-900">
    <% if notice.present? %>
      <div class="mx-auto mt-4 max-w-xl px-4">
        <div class="rounded-lg border border-emerald-200 bg-emerald-50 px-3 py-2 text-sm text-emerald-800">
          <%= notice %>
        </div>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="mx-auto mt-4 max-w-xl px-4">
        <div class="rounded-lg border border-red-200 bg-red-50 px-3 py-2 text-sm text-red-800">
          <%= alert %>
        </div>
      </div>
    <% end %>
    <main class="mx-auto max-w-xl px-4 py-8">
      <%= yield %>
    </main>
  </body>
</html>
