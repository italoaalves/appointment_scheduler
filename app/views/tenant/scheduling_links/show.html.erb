<div class="space-y-4">
  <header class="flex items-center justify-between gap-3">
    <div>
      <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
        <%= @scheduling_link.name.presence || t("space.scheduling_links.show.untitled") %>
      </h1>
      <p class="mt-1 text-xs text-slate-600">
        <%= @scheduling_link.link_type.humanize %> •
        <% if @scheduling_link.usable? %>
          <span class="text-emerald-600"><%= t("space.scheduling_links.show.active") %></span>
        <% else %>
          <span class="text-slate-500"><%= t("space.scheduling_links.show.inactive") %></span>
        <% end %>
      </p>
    </div>
    <div class="flex flex-wrap gap-2">
      <%= link_to t("space.scheduling_links.show.edit"),
                  edit_scheduling_link_path(@scheduling_link),
                  class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white hover:bg-slate-800" %>
      <%= link_to t("space.scheduling_links.show.back"),
                  scheduling_links_path,
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 hover:bg-slate-50" %>
    </div>
  </header>

  <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
    <h2 class="text-sm font-semibold text-slate-800"><%= t("space.scheduling_links.show.booking_url") %></h2>
    <p class="mt-1 text-xs text-slate-600"><%= t("space.scheduling_links.show.copy_hint") %></p>
    <div class="mt-3 flex flex-wrap items-center gap-2">
      <input type="text"
             readonly
             value="<%= book_url(token: @scheduling_link.token) %>"
             class="block flex-1 min-w-0 rounded-md border border-slate-300 bg-slate-50 px-3 py-2 text-sm text-slate-900 font-mono"
             id="booking_url" />
      <button type="button"
              data-controller="clipboard"
              data-clipboard-text-value="<%= book_url(token: @scheduling_link.token) %>"
              data-action="click->clipboard#copy"
              data-copied-text="<%= t("space.scheduling_links.show.copied") %>"
              class="inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50">
        <%= t("space.scheduling_links.show.copy") %>
      </button>
    </div>
  </div>

  <div class="rounded-xl border border-slate-200 bg-white p-4 shadow-sm">
    <dl class="space-y-3 text-sm">
      <div class="flex justify-between gap-4">
        <dt class="font-medium text-slate-700"><%= t("space.scheduling_links.show.type") %></dt>
        <dd class="text-slate-900"><%= @scheduling_link.link_type.humanize %></dd>
      </div>
      <% if @scheduling_link.single_use? %>
        <div class="flex justify-between gap-4">
          <dt class="font-medium text-slate-700"><%= t("space.scheduling_links.show.expires_at") %></dt>
          <dd class="text-slate-900"><%= format_datetime_in_zone(@scheduling_link.expires_at, @scheduling_link.space&.timezone) || "—" %></dd>
        </div>
        <div class="flex justify-between gap-4">
          <dt class="font-medium text-slate-700"><%= t("space.scheduling_links.show.used_at") %></dt>
          <dd class="text-slate-900"><%= format_datetime_in_zone(@scheduling_link.used_at, @scheduling_link.space&.timezone) || t("space.scheduling_links.show.not_used") %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <div class="flex flex-wrap gap-3">
    <%= link_to t("space.scheduling_links.show.open_link"),
                book_path(token: @scheduling_link.token),
                target: "_blank",
                rel: "noopener",
                class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50" %>
  </div>
</div>
