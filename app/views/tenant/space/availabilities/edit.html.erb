<div class="space-y-6">
  <header>
    <h1 class="text-2xl font-semibold tracking-tight text-slate-900">
      <%= t("space.availability.edit.title") %>
    </h1>
    <p class="mt-1 text-sm text-slate-600">
      <%= t("space.availability.edit.subtitle") %>
    </p>
  </header>

  <%= form_with model: @space, url: settings_space_availability_path, method: :patch, class: "space-y-6" do |form| %>
    <%= render "application/shared/error_messages", resource: @space %>

    <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="mb-4 text-sm font-semibold text-slate-800"><%= t("space.availability.edit.normal_hours_title") %></h2>
      <%= render "tenant/space/availability_schedule_fields", form: form %>
    </div>

    <div class="rounded-xl border border-slate-200 bg-white p-5 shadow-sm">
      <h2 class="mb-4 text-sm font-semibold text-slate-800"><%= t("space.availability.edit.scheduling_title") %></h2>
      <div class="space-y-4">
        <div>
          <%= form.label :slot_duration_minutes,
                         t("space.space.edit.slot_duration_label"),
                         class: "block text-sm font-medium text-slate-700" %>
          <%= form.select :slot_duration_minutes,
                          [ [ "15 #{t('space.space.edit.minutes')}", 15 ], [ "30 #{t('space.space.edit.minutes')}", 30 ], [ "45 #{t('space.space.edit.minutes')}", 45 ], [ "60 #{t('space.space.edit.minutes')}", 60 ], [ "90 #{t('space.space.edit.minutes')}", 90 ], [ "120 #{t('space.space.edit.minutes')}", 120 ] ],
                          {},
                          class: "mt-1 block w-full max-w-sm rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" %>
          <p class="mt-1.5 text-xs text-slate-500">
            <%= t("space.space.edit.slot_duration_notice") %>
          </p>
        </div>
        <div data-controller="timezone-select">
          <label for="space_timezone"
                 class="block text-sm font-medium text-slate-700"><%= t("space.space.edit.timezone_label") %></label>
          <%= form.hidden_field :timezone, id: nil, data: { timezone_select_target: "input" } %>
          <div class="mt-1 max-w-sm space-y-2">
            <select id="space_timezone"
                    data-timezone-select-target="select"
                    class="block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500">
              <% options = common_timezone_options_for_select(@space.timezone) %>
              <% show_other = @space.timezone.present? && !ApplicationHelper::COMMON_TIMEZONES.include?(@space.timezone) %>
              <% options.each do |label, value| %>
                <option value="<%= value %>"<%= " selected" if (value == @space.timezone) || (show_other && value == ApplicationHelper::OTHER_TIMEZONE_VALUE) %>>
                  <%= label %>
                </option>
              <% end %>
            </select>
            <input type="text"
                   data-timezone-select-target="otherField"
                   value="<%= @space.timezone if @space.timezone.present? && !ApplicationHelper::COMMON_TIMEZONES.include?(@space.timezone) %>"
                   placeholder="<%= t('space.space.edit.timezone_other_placeholder') %>"
                   class="<%= 'hidden ' unless @space.timezone.present? && !ApplicationHelper::COMMON_TIMEZONES.include?(@space.timezone) %>block w-full rounded-md border border-slate-300 bg-white px-3 py-2 text-sm text-slate-900 focus:border-slate-500 focus:outline-none focus:ring-1 focus:ring-slate-500" />
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-wrap gap-3">
      <%= form.submit t("space.availability.edit.submit"),
                      class: "inline-flex items-center rounded-md bg-slate-900 px-3 py-2 text-xs font-semibold text-white shadow-sm hover:bg-slate-800" %>
      <%= link_to t("space.availability.edit.back_to_space"),
                  edit_settings_space_path,
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 hover:bg-slate-50" %>
      <%= link_to t("space.space.edit.back_to_appointments"),
                  appointments_path,
                  class: "inline-flex items-center rounded-md border border-slate-300 bg-white px-3 py-2 text-xs font-semibold text-slate-800 hover:bg-slate-50" %>
    </div>
  <% end %>
</div>
