<%# Renders onboarding wizard progress indicator.
    Locals: current_step (1–3) %>
<% current_step = local_assigns[:current_step] || 1 %>
<nav aria-label="<%= t("onboarding.progress.step1") %>" class="mb-8">
  <ol class="flex items-center gap-2">
    <% [ 1, 2, 3 ].each do |step| %>
      <% completed = step < current_step %>
      <% current = step == current_step %>
      <li class="flex items-center gap-2 <%= "flex-1" if step < 3 %>">
        <span class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full text-sm font-medium transition-colors
          <%= completed ? "bg-emerald-500 text-white" : current ? "bg-slate-900 text-white" : "bg-slate-200 text-slate-500" %>">
          <%= completed ? "✓" : step %>
        </span>
        <span class="hidden text-sm sm:inline
          <%= completed ? "text-emerald-600" : current ? "text-slate-900 font-medium" : "text-slate-400" %>">
          <%= t("onboarding.progress.step#{step}") %>
        </span>
        <% if step < 3 %>
          <span class="mx-2 flex-1 border-t border-slate-200" aria-hidden="true"></span>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>
